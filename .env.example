# Supabase Configuration (REQUIRED)
# Diese Werte findest du in deinem Supabase Dashboard unter Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# SMTP Configuration for Supabase Auth (Brevo)
# Configure in Supabase Dashboard > Authentication > Settings > SMTP Settings
SUPABASE_SMTP_HOST=smtp-relay.brevo.com
SUPABASE_SMTP_PORT=587
SUPABASE_SMTP_USER=your_brevo_login_email
SUPABASE_SMTP_PASS=your_brevo_smtp_key
SUPABASE_SMTP_ADMIN_EMAIL=admin@navaa.ai
SUPABASE_SMTP_SENDER_NAME=navaa Team

# Stripe API Keys (Test Environment)
# Ersetze die Platzhalter mit deinen echten Stripe Keys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE

# Stripe Webhook Secret (für Produktionsumgebung)
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Database URL (falls verwendet)
DATABASE_URL=your_database_url_here

# NextAuth Secret (falls verwendet)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# OpenAI API Key (für GPT-4 Integration)
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY_HERE
